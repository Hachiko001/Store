

<div align = right>
  <div class="container" style="min-height: 50px;" >
  <div class="row ">
    <%= form_tag products_path, class:"form-inline",
    method: :get do %>
      <div class="form-group">
        <label for="">Keyword</label>
        <input type="text" class="form-control" name="keyword">
      </div>
      <div class="form-group">
        <label for="">Sort Name</label>
        <select name="sort_mode" id="" class="form-control">
          <option value="0">A->Z</option>
          <option value="1">Z->A</option>
        </select>
      </div>
  <button type="submit" class="btn btn-primary">Search</button>

  <% end %>
  </div>
</div>
</div>


<% index=0 %>
<div class="container" >
  <% @products.each do |product| %>
  <% index=index +1 %>
  <% if index % 3 ==0%>
    <div class="row">
  <%end%>
        <div class="col-sm-4">
        <div class="panel panel-success">
          <div class="panel-heading"><a href="/products/<%=product.id%>"><%=product.name%></a></div>
          <div class="panel-body"><a href="/products/<%=product.id%>"><%=image_tag "Product1.jpg", height: '300', width: '300'%></div>
          <div class="panel-footer">Price: <%=product.price%></div>
        </div>
      </div>
  <% if index % 3 ==0%>
    </div>
  <%end%>
  <% end %>
